{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "environment_specification.environment_specification.scheduler.framework.tcpn.json",
  "title": "Specification of the environment",
  "description": "Specification of the environment",
  "type": "object",
  "properties": {
    "convection_factor": {
      "description": "Convection factor (W/mm^2 ºC)",
      "type": "number",
      "exclusiveMinimum": 0
    },
    "environment_temperature": {
      "description": "Environment temperature (ºC)",
      "type": "number",
      "exclusiveMinimum": -273
    },
    "maximum_temperature": {
      "description": "Maximum allowed temperature (ºC)",
      "type": "number",
      "exclusiveMinimum": -273
    }
  },
  "required": [
    "convection_factor",
    "environment_temperature",
    "maximum_temperature"
  ],
  "additionalProperties": false
}
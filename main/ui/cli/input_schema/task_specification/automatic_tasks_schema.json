    "numberOfTasks": {
      "description": "Number of tasks",
      "type": "integer",
      "exclusiveMinimum": 0
    },
    "utilizationOfTheTaskSet": {
      "description": "Number of tasks",
      "type": "number",
      "exclusiveMinimum": 0
    },
    "intervalForPeriods": {
      "description": "Periods intervals",
      "type": "object",
      "properties": {
        "min": {
          "description": "Min period",
          "type": "integer",
          "exclusiveMinimum": 0
        },
        "max": {
          "description": "Max period",
          "type": "integer",
          "exclusiveMinimum": 0
        }
      },
      "required": [
        "min",
        "max"
      ],
      "additionalProperties": false
    },
    "name": {
      "description": "Task generation algorithm name",
      "type": "string"

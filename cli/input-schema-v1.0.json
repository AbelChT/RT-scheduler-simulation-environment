{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "scheduler.framework.TCPN.schema.json",
  "title": "Scheduler Framework TCPN",
  "description": "Input for Scheduler Framework TCPN v1.0",
  "type": "object",
  "properties": {
    "tasks": {
      "oneOf": [
        {
          "description": "Set of tasks",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "worstCaseExecutionTime": {
                "description": "Worst case execution time in CPU cycles",
                "type": "number"
              },
              "period": {
                "description": "Period time in CPU cycles, equal to deadline",
                "type": "number"
              },
              "energyConsumption": {
                "description": "Energy consumption in Watts",
                "type": "number"
              }
            },
            "required": [
              "worstCaseExecutionTime",
              "period",
              "energyConsumption"
            ]
          }
        },
        {
          "description": "TODO: Pass properties Task generation algorithm",
          "type": "string"
        }
      ]
    },
    "processorProperties": {
      "description": "Processor properties",
      "type": "object",
      "properties": {
        "coresProperties": {
          "description": "Processor core properties",
          "type": "object",
          "properties": {}
        },
        "boardProperties": {}
      }
    }
  }
}
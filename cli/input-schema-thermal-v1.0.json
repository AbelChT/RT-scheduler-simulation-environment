{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "scheduler.framework.TCPN.schema.thermal.json",
  "title": "Scheduler Framework TCPN",
  "description": "Input for Scheduler Framework TCPN with thermal v1.0",
  "type": "object",
  "properties": {
    "tasks": {
      "oneOf": [
        {
          "description": "Set of tasks",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "worstCaseExecutionTime": {
                "description": "Task worst case execution time in CPU cycles",
                "type": "number",
                "exclusiveMinimum": 0
              },
              "period": {
                "description": "Task period in CPU cycles, equal to deadline",
                "type": "number",
                "exclusiveMinimum": 0
              },
              "energyConsumption": {
                "description": "Task energy consumption in Watts",
                "type": "number",
                "exclusiveMinimum": 0
              }
            },
            "required": [
              "worstCaseExecutionTime",
              "period",
              "energyConsumption"
            ]
          }
        },
        {
          "description": "Task generation algorithm properties",
          "type": "object",
          "properties": {
            "numberOfTasks": {
              "description": "Number of tasks",
              "type": "integer",
              "exclusiveMinimum": 0
            },
            "utilizationOfTheTaskSet": {
              "description": "Number of tasks",
              "type": "number",
              "exclusiveMinimum": 0
            },
            "intervalForPeriods": {
              "description": "Periods intervals",
              "type": "object",
              "properties": {
                "min": {
                  "description": "Min period",
                  "type": "integer",
                  "exclusiveMinimum": 0
                },
                "max": {
                  "description": "Max period",
                  "type": "integer",
                  "exclusiveMinimum": 0
                }
              }
            },
            "name": {
              "description": "Task generation algorithm name",
              "type": "string"
            }
          }
        }
      ]
    },
    "processor": {
      "description": "Processor properties",
      "type": "object",
      "properties": {
        "coresProperties": {
          "description": "Spec of homogeneous CPU core",
          "type": "object",
          "properties": {
            "numberOfCores": {
              "description": "Number of homogeneous CPU cores",
              "type": "integer",
              "exclusiveMinimum": 0
            },
            "frequencyScale": {
              "description": "Frequency scale of homogeneous CPU cores (1 is the base frequency at which the platform could operate)",
              "type": "number",
              "exclusiveMinimum": 0
            },
            "physicalProperties": {
              "description": "Physical properties of object",
              "type": "object",
              "properties": {
                "shape": {
                  "description": "Object shape",
                  "type": "object",
                  "properties": {
                    "x": {
                      "description": "X coordinate size (mm)",
                      "type": "number",
                      "exclusiveMinimum": 0
                    },
                    "y": {
                      "description": "Y coordinate size (mm)",
                      "type": "number",
                      "exclusiveMinimum": 0
                    },
                    "z": {
                      "description": "Z coordinate size (mm)",
                      "type": "number",
                      "exclusiveMinimum": 0
                    }
                  },
                  "required": [
                    "x",
                    "y",
                    "z"
                  ]
                },
                "specificHeatCapacity": {
                  "description": "Specific heat capacities (J/Kg K)",
                  "type": "number",
                  "exclusiveMinimum": 0
                },
                "density": {
                  "description": "Density (Kg/cm^3)",
                  "type": "number",
                  "exclusiveMinimum": 0
                },
                "thermalConductivity": {
                  "description": "Thermal conductivity (W/m ºC)",
                  "type": "number",
                  "exclusiveMinimum": 0
                }
              },
              "required": [
                "shape",
                "specificHeatCapacity",
                "density",
                "thermalConductivity"
              ]
            },
            "coresOrigins": {
              "description": "Origins of cpu cores",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "x": {
                    "description": "X coordinate (mm)",
                    "type": "number",
                    "exclusiveMinimum": 0
                  },
                  "y": {
                    "description": "Y coordinate (mm)",
                    "type": "number",
                    "exclusiveMinimum": 0
                  }
                },
                "required": [
                  "x",
                  "y"
                ]
              }
            }
          },
          "required": [
            "numberOfCores",
            "frequencyScale",
            "physicalProperties"
          ]
        },
        "boardProperties": {
          "description": "Spec of CPU board",
          "type": "object",
          "properties": {
            "physicalProperties": {
              "description": "Physical properties of object",
              "type": "object",
              "properties": {
                "shape": {
                  "description": "Object shape",
                  "type": "object",
                  "properties": {
                    "x": {
                      "description": "X coordinate size (mm)",
                      "type": "number",
                      "exclusiveMinimum": 0
                    },
                    "y": {
                      "description": "Y coordinate size (mm)",
                      "type": "number",
                      "exclusiveMinimum": 0
                    },
                    "z": {
                      "description": "Z coordinate size (mm)",
                      "type": "number",
                      "exclusiveMinimum": 0
                    }
                  },
                  "required": [
                    "x",
                    "y",
                    "z"
                  ]
                },
                "specificHeatCapacity": {
                  "description": "Specific heat capacities (J/Kg K)",
                  "type": "number",
                  "exclusiveMinimum": 0
                },
                "density": {
                  "description": "Density (Kg/cm^3)",
                  "type": "number",
                  "exclusiveMinimum": 0
                },
                "thermalConductivity": {
                  "description": "Thermal conductivity (W/m ºC)",
                  "type": "number",
                  "exclusiveMinimum": 0
                }
              },
              "required": [
                "shape",
                "specificHeatCapacity",
                "density",
                "thermalConductivity"
              ]
            }
          },
          "required": [
            "physicalProperties"
          ]
        }
      },
      "required": [
        "coresProperties",
        "boardProperties"
      ]
    },
    "environment": {
      "description": "Specification of the environment",
      "type": "object",
      "properties": {
        "convectionFactor": {
          "description": "Convection factor (W/mm^2 ºC)",
          "type": "number",
          "exclusiveMinimum": 0
        },
        "environmentTemperature": {
          "description": "Environment temperature (ºC)",
          "type": "number",
          "exclusiveMinimum": -273.15
        },
        "maximumTemperature": {
          "description": "Maximum temperature (ºC)",
          "type": "number",
          "exclusiveMinimum": -273.15
        }
      },
      "required": [
        "convectionFactor",
        "environmentTemperature",
        "maximumTemperature"
      ]
    },
    "simulation": {
      "description": "Simulation properties",
      "type": "object",
      "properties": {
        "meshStepSize": {
          "description": "Mesh step size (mm)",
          "type": "number",
          "exclusiveMinimum": 0
        },
        "timeStep": {
          "description": "Time accuracy (s)",
          "type": "number",
          "exclusiveMinimum": 0
        }
      },
      "required": [
        "meshStepSize",
        "timeStep"
      ]
    },
    "scheduler": {
      "description": "Scheduler properties",
      "type": "object",
      "properties": {
        "name": {
          "description": "Scheduler name",
          "type": "string"
        }
      },
      "required": [
        "name"
      ]
    },
    "output": {
      "description": "Output naming properties",
      "type": "object",
      "properties": {
        "path": {
          "description": "Contained directory path",
          "type": "string"
        },
        "baseName": {
          "description": "Naming prefix for all files",
          "type": "string"
        },
        "generate": {
          "description": "Files to generate",
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "allocationAndExecution",
              "temperatureEvolution"
            ]
          },
          "minLength": 1
        }
      },
      "required": [
        "path",
        "baseName",
        "generate"
      ]
    }
  },
  "required": [
    "tasks",
    "processor",
    "environment",
    "simulation",
    "scheduler",
    "output"
  ]
}
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "scheduler.framework.TCPN.schema.not.thermal.json",
  "title": "Scheduler Framework TCPN",
  "description": "Input for Scheduler Framework TCPN without thermal v1.0",
  "type": "object",
  "properties": {
    "tasks": {
      "oneOf": [
        {
          "description": "Set of tasks",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "worstCaseExecutionTime": {
                "description": "Task worst case execution time in CPU cycles",
                "type": "number",
                "exclusiveMinimum": 0
              },
              "period": {
                "description": "Task period in CPU cycles, equal to deadline",
                "type": "number",
                "exclusiveMinimum": 0
              }
            },
            "required": [
              "worstCaseExecutionTime",
              "period"
            ]
          }
        },
        {
          "description": "Task generation algorithm properties",
          "type": "object",
          "properties": {
            "numberOfTasks": {
              "description": "Number of tasks",
              "type": "integer",
              "exclusiveMinimum": 0
            },
            "utilizationOfTheTaskSet": {
              "description": "Number of tasks",
              "type": "number",
              "exclusiveMinimum": 0
            },
            "intervalForPeriods": {
              "description": "Periods intervals",
              "type": "object",
              "properties": {
                "min": {
                  "description": "Min period",
                  "type": "integer",
                  "exclusiveMinimum": 0
                },
                "max": {
                  "description": "Max period",
                  "type": "integer",
                  "exclusiveMinimum": 0
                }
              }
            },
            "name": {
              "description": "Task generation algorithm name",
              "type": "string"
            }
          }
        }
      ]
    },
    "processor": {
      "description": "Processor properties",
      "type": "object",
      "properties": {
        "coresProperties": {
          "description": "Spec of homogeneous CPU core",
          "type": "object",
          "properties": {
            "numberOfCores": {
              "description": "Number of homogeneous CPU cores",
              "type": "integer",
              "exclusiveMinimum": 0
            },
            "frequencyScale": {
              "description": "Frequency scale of homogeneous CPU cores (1 is the base frequency at which the platform could operate)",
              "type": "number",
              "exclusiveMinimum": 0
            }
          },
          "required": [
            "numberOfCores",
            "frequencyScale"
          ]
        }
      },
      "required": [
        "coresProperties"
      ]
    },
    "scheduler": {
      "description": "Scheduler properties",
      "type": "object",
      "properties": {
        "name": {
          "description": "Scheduler name",
          "type": "string"
        }
      },
      "required": [
        "name"
      ]
    },
    "output": {
      "description": "Output naming properties",
      "type": "object",
      "properties": {
        "path": {
          "description": "Contained directory path",
          "type": "string"
        },
        "baseName": {
          "description": "Naming prefix for all files",
          "type": "string"
        },
        "generate": {
          "description": "Files to generate",
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "allocationAndExecution"
            ]
          },
          "minLength": 1
        }
      },
      "required": [
        "path",
        "baseName",
        "generate"
      ]
    }
  },
  "required": [
    "tasks",
    "processor",
    "scheduler",
    "output"
  ]
}